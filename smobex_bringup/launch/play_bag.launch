<?xml version="1.0"?>
<launch>
    <arg name="name" default=""/>
    <arg name="play" default="true"/>
    <arg name="factor" default="1"/>
    <arg name="start_sec" default="0"/>

    <param name="/use_sim_time" value="true"/>

    <!--uncompress images-->
    <node pkg="image_transport" type="republish" name="republish_camera" output="screen" args="compressed in:=/camera/rgb/image_raw raw out:=/camera/rgb/image_raw"/>

    <include file="$(find openni2_launch)/launch/openni2.launch">
        <arg name="publish_tf" value="false"/>
        <arg name="load_driver" value="false"/>
        <arg name="depth_registration" value="true"/>
    </include>

    <node if="$(arg play)" pkg="rosbag" type="play" name="play_bag" output="screen" args="--clock --pause -r $(arg factor) -s $(arg start_sec) /mnt/HDD/Linux_Files/bagfiles/$(arg name).bag" />
    <!-- <node pkg="rqt_bag" type="rqt_bag" name="play_bag" args="-clock /mnt/HDD/Linux_Files/bagfiles/$(arg name).bag" required="true" output="screen"/> -->

    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />

    <param name="robot_description" command="$(find xacro)/xacro --inorder '$(find smobex_description)/urdf/calibrated.xacro'" />

    <!-- Rviz for visualization -->
    <node pkg="rviz" type="rviz" name="rviz" args="--display-config $(find smobex_bringup)/config/operation_mode.rviz" required="true"/>
</launch>